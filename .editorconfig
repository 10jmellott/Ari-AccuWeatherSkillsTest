# EditorConfig is awesome: https://EditorConfig.org

# Top-Most style
root = true

# All files
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# Indentation and spacing
indent_style = tab
indent_size = 4
tab_width = 4

[*.{md,yml}]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2
tab_width = 2
